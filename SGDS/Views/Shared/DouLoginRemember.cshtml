@model IS.Models.User
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/dou/js")
<script>$.AppConfigOptions = { default_loading: '@Url.Content("~/Scripts/gis/images/loading/loading_black.gif")' } ;</script>
<div class="dou-login-container" style="padding:12px; margin:100px auto;max-width:300px;border:1px lightgray solid">
    @************重設User controller****************@
    @using (Html.BeginForm("DouLoginRemember", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {

        if (ViewBag.ErrorMessage != null)
        {
            <label style="color:red">@ViewBag.ErrorMessage</label>
        }
        <div class="form-group">
            @Html.LabelFor(m => m.Id, new { @class = " control-label" })

            @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })

            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

        </div>
        <div class="form-group">
            @Html.CheckBox("re")
            <label>記憶登入</label>

            @*<input type="checkbox" id="re" class="form-check">*@
        </div>
        <button type="submit" class="btn btn-success col-sm-12"> 送 出 </button>
        <div class="clearfix"></div>
    }
</div>
<style>
    header, footer,hr{
        display:none;
    }
</style>
